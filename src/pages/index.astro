---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Zhuldyz Namazbayeva</h1>
		<p class="mb-4">
			ðŸ‘‹ Hey there! I'm a code enthusiast originally from Kazakhstan now on a coding adventure in Poland. With a blend of Vue.js, Nuxt.js, React.js, and a sprinkle of Jest, TypeScript, and Tailwind CSS, I've been crafting digital magicâ€”optimizing websites, managing intern armies, and redesigning UI/UX.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
